{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 form-container">
                <div class="col-lg-8 col-md-12 col-10 offset-2 form-box text-center my-5">

                    <div class="heading mb-5">
                        <h1 class="fs-1 text-decoration-underline">Gestionnaire des categories</h1>
                    </div>

                    {# Début - Section d'ajout de catégorie #}
                    <section id="add-category">
                        <h2 class="fs-2">Ajouter une catégorie</h2>

                        <div class="offset-4 col-4 my-5">
                            {{ form_start(createCategoryForm) }}
                            {{ form_row(createCategoryForm.name, {
                                label: 'Donnez un nom à votre catégorie',
                                label_attr: {
                                    class: 'fw-bold',
                                },

                            }) }}
                            {{ form_row(createCategoryForm.icon, {
                                label: 'Selectionnez une îcone',
                                label_attr: {
                                    class: 'fw-bold',
                                },
                            }) }}

                            <button class="btn btn-success mt-4 w-100" type="submit">Valider</button>
                            {{ form_end(createCategoryForm) }}


                        </div>

                    </section>
                    {# Fin de Section #}

                    <hr class="my-5">

                    {# Début - Section de modification de nom de catégorie #}
                    <section id="modify-category">
